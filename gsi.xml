<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <include name="base-q.xml"/>
  
  <!--  include some repos that belong to "phh" only (not AOSP) -->
  <remote name="phh" fetch="https://github.com/phhusson" />
  
  <!--   
    use "b2g_gsi" organization to temporarily store some repos which are "android-10.0.0_r11" （not android10-gsi）branch
    and has been added phh's GSI patches.
  -->
  <remote name="b2g_gsi" fetch="https://github.com/b2g-gsi" revision="gonk_android-10.0.0_r11" />
  
  <!--   Add back some repos from AOSP manifest -->
  <project path="device/generic/common" name="device/generic/common" groups="pdk" />
  <project path="prebuilts/abi-dumps/ndk" name="platform/prebuilts/abi-dumps/ndk" groups="pdk-fs" clone-depth="1" />
  <project path="prebuilts/abi-dumps/vndk" name="platform/prebuilts/abi-dumps/vndk" groups="pdk-fs" clone-depth="1" />
  <project path="prebuilts/vndk/v27" name="platform/prebuilts/vndk/v27" groups="pdk" clone-depth="1" />
  <project path="prebuilts/vndk/v28" name="platform/prebuilts/vndk/v28" groups="pdk" clone-depth="1" />

  <!--  replace repo -->
  <remove-project name="platform_build"/>
  <remove-project name="platform_system_vold"/>
  <remove-project name="platform_system_core"/>
  <remove-project name="platform/bionic" />
  <remove-project name="platform/frameworks/native" />
  <remove-project name="platform/frameworks/base" />
  <remove-project name="platform/frameworks/av" />
  <remove-project name="platform/frameworks/opt/net/wifi" />
  <remove-project name="platform/system/bpf" />
  <remove-project name="platform/external/selinux" />
  <remove-project name="platform/external/skia" />

  <!-- add phh's patches based on "android-10.0.0_r11" branch of AOSP's repos -->
  <project path="bionic" name="platform_bionic" remote="b2g_gsi" />
  <project path="frameworks/native" name="platform_frameworks_native" remote="b2g_gsi" />  
  <project path="frameworks/base" name="platform_frameworks_base" remote="b2g_gsi" />
  <project path="frameworks/av" name="platform_frameworks_av" remote="b2g_gsi" />
  <project path="frameworks/opt/net/wifi" name="platform_frameworks_opt_net_wifi" remote="b2g_gsi" />
  <project path="system/bpf" name="platform_system_bpf" remote="b2g_gsi" />  
  <project path="external/selinux" name="platform_external_selinux" remote="b2g_gsi" /> 
  <project path="external/skia" name="platform_external_skia" remote="b2g_gsi" />

  <!-- add phh's patches based on "gonk_android-10.0.0_r11" branch of kaiostech's repos -->
  <project groups="kai" name="platform_build" path="build/make" remote="b2g_gsi" revision="gsi_gonk_android-10.0.0_r11" >
    <copyfile src="core/root.mk" dest="Makefile"/>
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk"/>
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default"/>
    <linkfile src="core" dest="build/core"/>
    <linkfile src="envsetup.sh" dest="build/envsetup.sh"/>
    <linkfile src="target" dest="build/target"/>
    <linkfile src="tools" dest="build/tools"/>
  </project>
  <project name="platform_system_core" path="system/core" remote="b2g_gsi" revision="gsi_gonk_android-10.0.0_r11" />
  <project name="platform_system_vold" path="system/vold" remote="b2g_gsi" revision="gsi_gonk_android-10.0.0_r11" />
  
 <!-- add essential phh's GSI repos -->
 <project path="device/phh/treble" name="device_phh_treble" remote="b2g_gsi" revision="gonk-android-10.0" />
 <project path="vendor/vndk" name="vendor_vndk" remote="phh" revision="android-10.0" />
 <project path="vendor/vndk-tests" name="vendor_vndk-tests" remote="phh" revision="master" />
 <project path="vendor/interfaces" name="vendor_interfaces" remote="phh" revision="pie" />
 <!--  unessentially, remove in next -->
 <project path="vendor/hardware_overlay" name="vendor_hardware_overlay" remote="phh" revision="pie" />
  
</manifest>
